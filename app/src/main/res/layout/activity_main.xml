<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="170dp"
        android:layout_height="225dp"
        android:src="@drawable/limas"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volume_limas"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/masukan_tinggi"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tinggi"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/masukan_panjang"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:id="@+id/panjang"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/masukan_lebar"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/lebar"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="hitungvolume"
        android:gravity="center"
        android:id="@+id/hitung"
        android:text="@string/hitung"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/volume"
        android:textSize="50dp"/>


</LinearLayout>